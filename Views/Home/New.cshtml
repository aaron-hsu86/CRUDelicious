@model Dish
<div class="text-center">
    <h1>Add a new Dish!</h1>
    <div class="d-flex justify-content-center gap-3">
        <a asp-action="Index">Home</a>
        <p>|</p>
        <p>Add a Dish</p>
    </div>
</div>
<form asp-action="Create" asp-controller="Home" method="post" class="d-flex gap-5 justify-content-center">
    <div class="d-flex flex-column gap-3">
        <label asp-for="Chef">Chef's Name</label>
        <span asp-validation-for="Chef" class="text-danger"></span>
        <input asp-for="Chef" type="text">
        <label asp-for="Name">Name of dish</label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="Name" type="text">
        <label asp-for="Calories"># of Calories</label>
        <span asp-validation-for="Calories" class="text-danger"></span>
        <input asp-for="Calories" type="number">
    </div>
    <div class="d-flex flex-column gap-3">
        <label asp-for="Tastiness"></label>
        <select asp-for="Tastiness">
            <option value="" disabled selected>--Select Tastiness--</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <span asp-validation-for="Tastiness" class="text-danger"></span>
    </div>
    <div class="d-flex flex-column gap-3">
        <label asp-for="Description">Description</label>
        <span asp-validation-for="Description" class="text-danger"></span>
        <textarea asp-for="Description"></textarea>
        <div class="d-flex justify-content-end">
            <button type="submit">Add Dish</button>
        </div>
    </div>
</form>